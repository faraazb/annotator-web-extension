{
    "manifest_version": 3,
    "name": "Annotator",
    "description": "A webpage annotation tool",
    "version": "0.1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "identity"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "./content/annotator.js"
            ],
            "css": [
                "./content/annotator.css"
            ]
        }
    ]
}